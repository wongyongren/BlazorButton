@page "/display"
<h3>Display</h3>
@boolvalue

<div class="toggle-wrapper">
    <label class="toggle">
        <input type="checkbox"
               @bind="boolvalue" />
        <span class="toggler round"></span>
    </label>
</div>

<Button2 @bind-ChildMessage="boolvalue"></Button2>
<br /><br /><br /><br />
<Button3></Button3>
@code {

    public bool boolvalue { get; set; }
    public string val;
    void ToggleCheckbox()
    {
        if (boolvalue)
        {
            val = "unchecked";
        }
        else
        {
            val = "checked";
        }
        boolvalue = !boolvalue;
    }
}